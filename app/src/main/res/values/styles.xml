<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="navigation_bar_icon">
        <item name="android:width">100dp</item>
        <item name="android:height">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="navigation_bar_item_container_normal">
    </style>
    <style name="navigation_bar_item_container_pressed">
    </style>
    <style name="tv_white">
        <item name="android:textColor">@color/navigation_bar_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="tv_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="tv_green">
        <item name="android:textColor">@color/navigation_bar_selected</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="navigation_bar_item2">
        <item name="android:background">@color/navigation_bar_background</item>
    </style>
    <style name="navigation_bar_item2_pressed">
        <item name="android:background">@color/navigation_bar_selected</item>
    </style>

    <style name="CustomProgressBar"
        parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
<!--        parent="@style/Widget.AppCompat.ProgressBar.Horizontal"-->
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
        <item name="android:minHeight">15dp</item> <!-- 设置进度条高度 -->
    </style>
</resources>